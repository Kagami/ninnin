{
  "compilerOptions": {
    "outDir": "build",
    "skipLibCheck": true,
    // "noEmitOnError": true,
    "sourceMap": true,

    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES5", "ES2015.Promise"],
    "types": [],
    // "allowSyntheticDefaultImports": true,
    // "esModuleInterop": true,
    // "isolatedModules": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"]
}
